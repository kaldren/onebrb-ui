<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onebrb.UI.Pages.ProfilePage"
             Title="ProfilePage">
    <StackLayout>
        <Label Text="Find a profile"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Entry x:Name="profileId" Placeholder="Enter a profile id" />
        <Button x:Name="profileBtn" Text="Find" Clicked="profileBtn_Clicked" />

        <Label x:Name="profileFirstName" />
        <Label x:Name="profileLastName" />
        <Label x:Name="profileEmail" />

    </StackLayout>
</ContentPage>
