<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onebrb.UI.Pages.SignInPage"
             Title="SignInPage">
    <StackLayout>
        <Label Text="Please, sign to Onebrb"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Button Text="Sign in with Google" x:Name="signInBtn" Clicked="signInBtn_Clicked" />

    </StackLayout>
</ContentPage>
